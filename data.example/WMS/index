/*
Описание структуры метаданных сервиса 1C:WMS
*/

сущность Справочник.Рейс {

  реквизит Код {
    тип Число;
  };
  реквизит Номер {
    тип Строка;
    обмен Datareon.ROUTE.routлилe_number;
  };
  attribute Заявки {
    тип Документ.Заявка[];
    обмен Datareon.ROUTE.route_orders;
  };

}

сущность Документ.Заявка {

  реквизит НомерДок {
    тип Строка;
    обмен Datareon.ORDER.number;
  };
  реквизит ДатаДок {
    тип Дата;
  };
  реквизит Рейс {
    тип Справочник.Рейс;
    обмен Datareon.ORDER.route;
  }
  реквизит Товары {
    тип Справочник.Номенклатура[];
  }
}

сущность Справочник.Номенклатура {

  реквизит Код {
    тип Число;
    обмен Datareon.CLIENTGOOD.sync_id;
  };
  реквизит Наименование {
    тип Строка;
    обмен Datareon.CLIENTGOOD.good_name;
  };
  реквизит Заявки {
    тип Документ.Заявка[];
  }
  
}
